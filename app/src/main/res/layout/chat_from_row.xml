<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circularImgViewFrom"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="14dp"
        android:background="@drawable/rounded_gray_et" />

    <TextView
        android:id="@+id/twMessage"
        android:layout_width="245dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/circularImgViewFrom"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_et_message"
        app:layout_constraintStart_toEndOf="@+id/circularImgView"
        app:layout_constraintTop_toTopOf="@+id/circularImgView" />

</RelativeLayout>